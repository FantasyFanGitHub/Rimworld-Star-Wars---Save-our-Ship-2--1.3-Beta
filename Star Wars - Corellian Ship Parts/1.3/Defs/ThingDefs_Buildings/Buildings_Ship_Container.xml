<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <DesignatorDropdownGroupDef>
    <defName>CEC_Container</defName>
  </DesignatorDropdownGroupDef>

  <ThingDef ParentName="CEC_ShipPartBase" Name="CEC_ContainerBase" Abstract="True">
    <researchPrerequisites>
      <li>CEC_Basics</li>
    </researchPrerequisites>
    <designatorDropdown>CEC_Container</designatorDropdown>
    <designationCategory>CEC_Category</designationCategory>
    <graphicData>
      <drawSize>(8,5)</drawSize>
    </graphicData>
    <size>(6,3)</size>
    <costList>
      <O21_OR_Durasteel>150</O21_OR_Durasteel>
      <O21_OR_ComponentHypertech>3</O21_OR_ComponentHypertech>
    </costList>
    <statBases>
      <MaxHitPoints>6000</MaxHitPoints>
      <WorkToBuild>20000</WorkToBuild>
    </statBases>
    <thingClass>Building_Storage</thingClass>
    <building>
      <isEdifice>true</isEdifice>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Important</priority>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
      <li MayRequire="LWM.DeepStorage">LWM.DeepStorage.ITab_DeepStorage_Inventory</li>
    </inspectorTabs>
    <altitudeLayer>LayingPawn</altitudeLayer>
    <surfaceType>Item</surfaceType>
    <drawGUIOverlay MayRequire="LWM.DeepStorage">true</drawGUIOverlay>  
    <comps>
      <li Class="LWM.DeepStorage.Properties"  MayRequire="LWM.DeepStorage">
        <maxNumberStacks>5</maxNumberStacks>
        <minTimeStoringTakes>150</minTimeStoringTakes>
        <additionalTimeEachStack>75</additionalTimeEachStack>
        <overlayType>SumOfItemsPerCell</overlayType>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="CEC_ContainerBase">
    <defName>Ship_CEC_Class4_Container</defName>
    <label>starship container (class-4)</label>
    <description>Stores stuff for later use.</description>
    <graphicData>
      <texPath>Structure/Class4ContainerBlue</texPath>
    </graphicData>
    <designationCategory>CEC_Category</designationCategory>
    <comps>
      <li Class="VanillaFurnitureExpanded.CompProperties_RandomBuildingGraphic">
        <randomGraphics>
          <li>Structure/Class4ContainerBlue</li>
          <li>Structure/Class4ContainerRed</li>
          <li>Structure/Class4ContainerGreen</li>
        </randomGraphics>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="CEC_ContainerBase">
    <defName>Ship_CEC_ZetaEta_Container</defName>
    <label>starship container (zeta/eta-class)</label>
    <description>Stores stuff for later use.</description>
    <graphicData>
      <texPath>Structure/ZetaEtaContainer</texPath>
    </graphicData>
  <designationCategory>CEC_Category</designationCategory>
  </ThingDef>
  
  <ThingDef ParentName="CEC_ContainerBase">
    <defName>Ship_CEC_GR75_Container</defName>
    <label>starship container (GR-75)</label>
    <description>Stores stuff for later use.</description>
    <graphicData>
      <texPath>Structure/GR75ContainerA</texPath>
      <drawSize>(6,4)</drawSize>
    </graphicData>
    <size>(4,2)</size>
    <costList>
      <O21_OR_Durasteel>120</O21_OR_Durasteel>
      <O21_OR_ComponentHypertech>2</O21_OR_ComponentHypertech>
    </costList>
    <statBases>
      <MaxHitPoints>5000</MaxHitPoints>
      <WorkToBuild>16000</WorkToBuild>
    </statBases>
    <designationCategory>CEC_Category</designationCategory>
    <comps>
      <li Class="VanillaFurnitureExpanded.CompProperties_RandomBuildingGraphic">
        <randomGraphics>
          <li>Structure/GR75ContainerA</li>
          <li>Structure/GR75ContainerB</li>
          <li>Structure/GR75ContainerC</li>
          <li>Structure/GR75ContainerD</li>
          <li>Structure/GR75ContainerE</li>
          <li>Structure/GR75ContainerF</li>
          <li>Structure/GR75ContainerG</li>
          <li>Structure/GR75ContainerH</li>
          <li>Structure/GR75ContainerI</li>
        </randomGraphics>
      </li>
    </comps>
  </ThingDef>
  
</Defs>
