	<ThingDef ParentName="CEC_ShipEngineBase">
		<defName>Ship_VCX100LightFreighter_Engine</defName>
		<label>VCX-100 light freighter engine</label>
    <description>...</description>
		<graphicData>
			<texPath>ShipParts6/VCX100FreighterEngine</texPath>
			<drawSize>(7,5)</drawSize>
		</graphicData>
    <size>(5,3)</size>
