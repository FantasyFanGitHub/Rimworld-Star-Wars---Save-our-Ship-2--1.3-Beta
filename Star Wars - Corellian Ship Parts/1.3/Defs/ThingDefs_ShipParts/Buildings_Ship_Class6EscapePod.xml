<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="CEC_ShipPartBase" Name="CEC_ShipPartEscape"  Abstract="True">
    <designatorDropdown>CEC_C6EP_Dropdown</designatorDropdown>
    <researchPrerequisites>
      <li>CEC_CEC_Civilian_Parts</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="CEC_ShipPartEscape">
    <defName>Ship_Class6EscapePod_Front</defName>
    <label>class-6 escape pod front</label>
    <graphicData>
      <texPath>ShipParts6/Class6PodFront</texPath>
      <drawSize>(3,6)</drawSize>
    </graphicData>
    <size>(1,6)</size>
    <costList>
      <O21_OR_Durasteel>60</O21_OR_Durasteel>
      <O21_OR_ComponentHypertech>1</O21_OR_ComponentHypertech>
    </costList>
    <statBases>
      <MaxHitPoints>1200</MaxHitPoints>
      <WorkToBuild>4800</WorkToBuild>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="CEC_ShipPartEscape">
    <defName>Ship_Class6EscapePod_SideRight</defName>
    <label>class-6 escape pod side right</label>
    <graphicData>
      <texPath>ShipParts6/Class6PodSideRight</texPath>
      <drawSize>(6,1)</drawSize>
    </graphicData>
    <size>(6,1)</size>
    <costList>
      <O21_OR_Durasteel>60</O21_OR_Durasteel>
