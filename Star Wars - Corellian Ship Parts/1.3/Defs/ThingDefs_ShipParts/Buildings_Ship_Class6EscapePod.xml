  <!--Engine-->
	<ThingDef ParentName="CEC_ShipEngineBase">
		<defName>Ship_Class6EscapePod_Engine</defName>
		<label>class-6 escape pod engine</label>
    <description>...</description>
		<graphicData>
			<texPath>ShipParts6/Class6PodEngine</texPath>
			<drawSize>(6,5)</drawSize>
		</graphicData>
    <size>(6,3)</size>
    <designatorDropdown>CEC_C6EP_Dropdown</designatorDropdown>
    <researchPrerequisites>
      <li>CEC_CEC_Civilian_Parts</li>
    </researchPrerequisites>
		<costList>
      <O21_OR_Durasteel>100</O21_OR_Durasteel>
      <O21_OR_ComponentHypertech>3</O21_OR_ComponentHypertech>
    </costList>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>22000</WorkToBuild>
    </statBases>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelCapacity>500.0</fuelCapacity>
				<targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
				<fuelFilter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<autoRefuelPercent>1</autoRefuelPercent>
				<showFuelGizmo>false</showFuelGizmo>
				<drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
				<drawFuelGaugeInMap>false</drawFuelGaugeInMap>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
			</li>
			<li Class="CompProperties_EngineTrail">
				<thrust>1</thrust>
			</li>
		</comps>
	</ThingDef>
  
</Defs>